#include "fillit.h"

size_t  get_row(size_t index, int o_size)
{
    size_t row;

    row = 0;
    row = (index + 1) / o_size;
    return (row);
}

void    coortoi(size_t *index, int x, int y, size_t width)
{
    *index = x + y * width;
}

void	itocoor(int *x, int *y, size_t index, size_t size)
{
	*x = index % size;
	*y = index / size;
}

//only works to bigger sizes
size_t    convert_index(size_t index, size_t o_size, size_t n_width)
{
    size_t row;
    size_t conv;

    row = get_row(index, o_size);
    if (row != 0)
        conv = (n_width * row) + (index % o_size);
    return (conv);
}

unsigned long long convert_sll(unsigned short t)
{
    unsigned long long res;
    unsigned short mask;
    size_t i;
    size_t index;

    i = 0;
    mask = (1 << 15);
    res = 0UL;
    while (mask)
    {
        if (mask & t)
        {
            index = convert_index(i, 4, 8);
            res |= (1 << (64 - index));
        }
        mask >>= 1;
        i++;
    }
    return (res);
}


